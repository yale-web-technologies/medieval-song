<p id="notice"><%= notice %></p>

<h1>External Song Texts</h1>

<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>ID</th>
      <th>Short Desc</th>
      <th>Text</th>
      <th>URL</th>
      <th>Song</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @external_song_texts.each do |t| %>
      <tr>
        <td><%= t.id %></td>
        <td><%= t.short_desc.truncate(10) %></td>
        <td><%= t.text.truncate(20) %></td>
        <td><%= t.url %></td>
        <td><%= t.song.first_line.truncate(20) %></td>
        <td><%= link_to 'Show', t %></td>
        <td><%= link_to 'Edit', edit_external_song_text_path(t) %></td>
        <td><%= link_to 'Destroy', t, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

