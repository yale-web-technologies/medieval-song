<p id="notice"><%= notice %></p>

<h1>Performances</h1>

<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>Type</th>
      <th>URL</th>
      <th>Short desc</th>
      <th>Song</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @performances.each do |performance| %>
      <tr>
        <td><%= performance.media_type %></td>
        <td><%= performance.url %></td>
        <td><%= performance.short_desc %></td>
        <td><%= if performance.song.nil? then '' else performance.song.first_line end %></td>
        <td><%= link_to 'Show', performance %></td>
        <td><%= link_to 'Edit', edit_performance_path(performance) %></td>
        <td><%= link_to 'Destroy', performance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

