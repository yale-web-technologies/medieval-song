<p id="notice"><%= notice %></p>

<h1>Song Instances</h1>

<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Manuscript</th>
      <th>Song</th>
      <th>Song text</th>
      <th>Folio</th>
      <th>Verse form</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @song_instances.each do |si| %>
      <tr>
        <td><%= si.id %></td>
        <td><%= si.label %></td>
        <td><%= si.manuscript.title.truncate(50) %></td>
        <td><%= si.song.first_line.truncate(20) %></td>
        <td><%= si.song_text.truncate(20) %></td>
        <td><%= si.folio %></td>
        <td><%= si.verse_form %></td>
        <td><%= link_to 'Show', si %></td>
        <td><%= link_to 'Edit', edit_song_instance_path(si) %></td>
        <td><%= link_to 'Destroy', si, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="mt-4">
  <%= link_to 'New Song Instance', new_song_instance_path %>
</div>