<p id="notice"><%= notice %></p>

<h1>Manuscripts</h1>

<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>Title</th>
      <th>Manifest url</th>
      <th>Long desc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @manuscripts.each do |manuscript| %>
      <tr>
        <td><%= manuscript.title.truncate(30) %></td>
        <td><a target="_blank" href="<%= manuscript.manifest_url %>"><%= manuscript.manifest_url.truncate(20) %></td>
        <td><%= manuscript.long_desc.truncate(20) %></td>
        <td><%= link_to 'Show', manuscript %></td>
        <td><%= link_to 'Edit', edit_manuscript_path(manuscript) %></td>
        <td><%= link_to 'Destroy', manuscript, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

