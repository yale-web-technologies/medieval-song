<p id="notice"><%= notice %></p>

<h1>External Witnesses</h1>

<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>Label</th>
      <th>Url</th>
      <th>Song</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @external_witnesses.each do |external_witness| %>
      <tr>
        <td><%= external_witness.label %></td>
        <td><%= external_witness.url %></td>
        <td><%= external_witness.song.first_line.truncate(20) %></td>
        <td><%= link_to 'Show', external_witness %></td>
        <td><%= link_to 'Edit', edit_external_witness_path(external_witness) %></td>
        <td><%= link_to 'Destroy', external_witness, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="mt-4">
  <%= link_to 'New External Witness', new_external_witness_path %>
</div>
