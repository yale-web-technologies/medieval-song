<%= form_for(song, html: {id: 'song-form'}) do |f| %>
  <% if song.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(song.errors.count, "error") %> prohibited this song from being saved:</h2>

      <ul>
      <% song.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :first_line %>
    <%= f.text_field :first_line, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :nimev, 'NIMEV' %>
    <%= f.text_field :nimev, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :dimev, 'DIMEV' %>
    <%= f.text_field :dimev, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :num_copies, 'Number of copies' %>
    <%= f.text_field :num_copies, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :refrains, 'Tags, refrains' %>
    <%= f.text_area :refrains, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :refs, 'Biblical/liturgical refs' %>
    <%= f.text_area :refs, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label for="author">Author [<%= @author_id %>] </label>
    <select class="form-control" id="author" name="song[author_id]" form="song-form">
      <option value="">None</option>
      <% @authors.each do |author| %>
        <%
          if @author_id == author.id
            selected = 'selected'
          else
            selected = ''
          end
        %>
        <option value="<%= author.id %>" <%= selected %>><%= author.name %></option>
      <% end %>
    </select>
  </div>

  <div class="form-group">
    <%= f.label :theme %>
    <%= f.text_field :theme, class: 'form-control' %>
  </div>

  <div class="actions mt-4">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
