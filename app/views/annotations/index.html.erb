<p id="notice"><%= notice %></p>

<h1>Annotations</h1>

<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>Song Instance</th>
      <th>SI-ID</th>
      <th>Sequence</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @annotations.each do |annotation| %>
      <tr>
        <td><%= annotation.song_instance.label.truncate(20) %></td>
        <td><%= annotation.song_instance_id %></td>
        <td><%= annotation.seq %></td>
        <td><%= annotation.text %></td>
        <td><%= link_to 'Show', annotation %></td>
        <td><%= link_to 'Edit', edit_annotation_path(annotation) %></td>
        <td><%= link_to 'Destroy', annotation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

